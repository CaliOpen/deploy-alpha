version: '2'

services:

  drone-server:
    image: drone/drone
    ports:
      - 80:8000
      - 9000
    volumes:
      - ./drone/:/var/lib/drone/
    restart: always
    environment:
      - DRONE_OPEN=true
      - DRONE_HOST={{ DRONE_HOST }}
      - DRONE_GITHUB=true
      - DRONE_ORGS=CaliOpen
      - DRONE_GITHUB_CLIENT={{ DRONE_GITHUB_CLIENT }}
      - DRONE_GITHUB_SECRET={{ DRONE_GITHUB_SECRET }}
      - DRONE_SECRET={{ DRONE_SECRET }}
      - DRONE_ADMIN={{ DRONE_ADMIN }}

  drone-agent:
    image: drone/agent
    command: agent
    restart: always
    depends_on:
      - drone-server
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
    environment:
      - DRONE_SERVER=drone-server:9000
      - DRONE_SECRET={{ DRONE_SECRET }}
