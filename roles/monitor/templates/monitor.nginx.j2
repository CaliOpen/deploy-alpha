
server {
    listen    443 ssl;
    listen    [::]:443 ssl;
    server_name grafana.caliopen.org;

    ssl_certificate     /etc/nginx/certs/caliopen.crt;
    ssl_certificate_key /etc/nginx/certs/caliopen.key;
    ssl_prefer_server_ciphers On;
    ssl_protocols TLSv1.1 TLSv1.2;
    ssl_ciphers ECDH+AESGCM:DH+AESGCM:ECDH+AES256:DH+AES256:ECDH+AES128:DH+AES:RSA+AESGCM:RSA+AES:!aNULL:!MD5:!DSS;

    location / {
            proxy_pass  http://localhost:3000;
            proxy_set_header Host $host;
    }
}

server {
    listen    443 ssl;
    listen    [::]:443 ssl;
    server_name prometheus.caliopen.org;

    ssl_certificate     /etc/nginx/certs/caliopen.crt;
    ssl_certificate_key /etc/nginx/certs/caliopen.key;
    ssl_prefer_server_ciphers On;
    ssl_protocols TLSv1.1 TLSv1.2;
    ssl_ciphers ECDH+AESGCM:DH+AESGCM:ECDH+AES256:DH+AES256:ECDH+AES128:DH+AES:RSA+AESGCM:RSA+AES:!aNULL:!MD5:!DSS;

    location / {
            proxy_pass  http://{{ hostvars['prometheus1']['backend_ip'] }}:9090;
    }
}

server {
    listen 80;
    listen [::]:80;
    server_name grafana.caliopen.org;
    rewrite     ^(.*)   https://$server_name$1 permanent;
}

server {
    listen 80;
    listen [::]:80;
    server_name prometheus.caliopen.org;
    rewrite     ^(.*)   https://$server_name$1 permanent;
}


server {
  listen {{ facter_ipaddress_eth1 }}:9145;
  allow {{ facter_network_eth1 }}/24;
  deny all;
  location /metrics {
    content_by_lua '
      metric_connections:set(ngx.var.connections_reading, {"reading"})
      metric_connections:set(ngx.var.connections_waiting, {"waiting"})
      metric_connections:set(ngx.var.connections_writing, {"writing"})
      prometheus:collect()
    ';
  }
}
